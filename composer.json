{
  "name": "centreon/centreon-widget-engine-status",
  "description": "Widget to display operational metrics of a monitoring engine",
  "version": "21.04.0",
  "type": "project",
  "license": "proprietary",
  "scripts": {
    "test": "phpunit",
    "test:ci": "@test --log-junit ./build/phpunit.xml --coverage-clover ./build/coverage.xml --no-interaction --do-not-cache-result",
    "codestyle": "phpcs --standard=./ruleset.xml ./",
    "codestyle:ci": "@codestyle --report=checkstyle --report-file=./build/checkstyle.xml --no-cache"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "centreon/centreon": "dev-master",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "config": {
    "secure-http": false,
    "platform": {
      "php": "7.2"
    }
  }
}
